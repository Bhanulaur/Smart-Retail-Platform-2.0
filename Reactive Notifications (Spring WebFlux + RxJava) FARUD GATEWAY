@Service
public class NotificationService {
    public Flowable<String> notifyUser(Order order) {
        return Flowable.just("Sending email for " + order.getId())
                .doOnNext(System.out::println)
                .concatWith(Flowable.just("Sending SMS for " + order.getId()));
    }
}
# fraud_service.py
from flask import Flask, request, jsonify
import joblib

app = Flask(__name__)
model = joblib.load("fraud_model.pkl")

@app.route("/predict", methods=["POST"])
def predict():
    data = request.json
    prediction = model.predict([data["features"]])
    return jsonify({"fraud": bool(prediction[0])})

app.run(port=5001)
spring:
  cloud:
    gateway:
      routes:
        - id: product-service
          uri: http://product-service:8080
          predicates:
            - Path=/products/**
          filters:
            - JwtAuthFilter
